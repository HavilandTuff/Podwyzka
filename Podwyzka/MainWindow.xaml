<Window x:Class="Podwyzka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Podwyzka"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="label" Content="Czy chcesz dostać podwyżkę?" Margin="140.45,82.537,137.226,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" FontSize="24" FontWeight="Bold" AutomationProperties.IsColumnHeader="True">
            
        </Label>
        <Button x:Name="buttonYES" Content="TAK" 
                HorizontalAlignment="Left" 
                Margin="138.501,204.145,0,0" 
                VerticalAlignment="Top" 
                Width="150" Height="70" 
                FontSize="36" 
                Click="ButtonYES_Click"
                MouseEnter="ButtonYES_MouseEnter"/>
        <Button x:Name="buttonNO" Content="NIE" 
                HorizontalAlignment="Left" 
                Margin="497.518,204.145,0,0" 
                VerticalAlignment="Top" 
                Width="150" Height="70" 
                FontSize="36" 
                Click="ButtonYES_Click"
                MouseEnter="ButtonYES_MouseEnter"/>

    </Grid>
</Window>
